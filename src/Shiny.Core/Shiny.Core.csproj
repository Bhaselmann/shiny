            <None Include="..\Shiny.Generators\bin\$(Configuration)\netstandard2.0\Shiny.Generators.dll"
                  Pack="true"
                  PackagePath="build\Shiny.Generators.dll"
                  Visible="false" />
        </ItemGroup>
    </Target>-->
</Project>
