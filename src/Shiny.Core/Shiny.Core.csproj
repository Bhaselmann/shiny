<Project Sdk="MSBuild.Sdk.Extras">

    <PropertyGroup>
        <RootNamespace>Shiny</RootNamespace>
        <Description>The Shiny Core containing all of the major functionality like hosting, logging, connectivity, environment, IO, power, settings, application state monitoring, and jobs as well as many other utilities</Description>
        <TargetFrameworks>netstandard2.0;xamarin.ios10;xamarin.watchos10;xamarin.tvos10;tizen50;monoandroid10.0</TargetFrameworks>
        <TargetFrameworks Condition=" $(IncludeNet5) == true ">net5.0;net5.0-ios;net5.0-watchos;net5.0-tvos;net5.0-android;$(TargetFrameworks)</TargetFrameworks>
        <TargetFrameworks Condition=" $(OS) == 'WINDOWS_NT' ">uap10.0.16299;$(TargetFrameworks)</TargetFrameworks>
        <TargetFrameworks Condition=" $(OS) == 'WINDOWS_NT' AND $(IncludeNet5) == true ">net5.0-windows;$(TargetFrameworks)</TargetFrameworks>
        <!--<TargetFrameworks Condition=" $(OS) == 'WINDOWS_NT' ">uap10.0.16299;netcoreapp3.0;net461;$(TargetFrameworks)</TargetFrameworks>-->
        <TargetsForTfmSpecificBuildOutput Condition=" $(TargetFramework.StartsWith('uap')) ">$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
    </PropertyGroup>

    <ItemGroup>
        <None Include="readme.txt" pack="true" PackagePath="." />
        <Compile Remove="**\Platforms\**\*.cs" />
        <None Include="**\Platforms\**\*.cs" />
        <None Include="build\**" Pack="true" PackagePath="build\." />
        <PackageReference Include="Newtonsoft.Json" />
        <PackageReference Include="System.Reactive" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
        <PackageReference Include="Uno.SourceGenerationTasks" />
        <ProjectReference Include="..\Shiny.Core.Abstractions\Shiny.Core.Abstractions.csproj" />
        <ProjectReference Include="..\Shiny.Generators\Shiny.Generators.csproj">
            <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) OR $(TargetFramework) == 'net5.0' ">
        <Compile Include="**\Platforms\*netstandard*\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.Contains('android')) ">
        <Compile Include="**\Platforms\Android\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
        <PackageReference Include="Xamarin.AndroidX.Room.Common" />
        <PackageReference Include="Xamarin.AndroidX.Room.Runtime" />
        <PackageReference Include="Xamarin.AndroidX.Core" />
        <PackageReference Include="Xamarin.AndroidX.Lifecycle.Process" />
        <PackageReference Include="Xamarin.AndroidX.Lifecycle.Runtime" />
        <PackageReference Include="Xamarin.AndroidX.Work.Runtime" />
        <PackageReference Include="Xamarin.AndroidX.Concurrent.Futures" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('tizen')) ">
        <Compile Include="**\Platforms\Tizen\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) OR $(TargetFramework.Contains('windows')) ">
        <ProjectReference Include="..\Shiny.Support.Uwp\Shiny.Support.Uwp.csproj">
            <ReferenceOutputAssembly>true</ReferenceOutputAssembly>
            <IncludeAssets>Shiny.Support.Uwp.*</IncludeAssets>
        </ProjectReference>
        <Compile Include="**\Platforms\Uwp\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.Contains('ios')) ">
        <Compile Include="**\Platforms\Apple\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
        <Compile Include="**\Platforms\*iOS*\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.Contains('tvos')) ">
        <Compile Include="**\Platforms\Apple\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
        <Compile Include="**\Platforms\*tvOS*\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.Contains('watchos')) ">
        <Compile Include="**\Platforms\Apple\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
        <Compile Include="**\Platforms\*watchOS*\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('mac')) ">
        <Compile Include="**\Platforms\Apple\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
        <Compile Include="**\Platforms\*macOS*\**\*.cs" />
        <Reference Include="netstandard" />
    </ItemGroup>

    <Target Name="BundleGenerators" BeforeTargets="Pack;_LoadPackInputItems">
        <ItemGroup>
            <None Include="..\Shiny.Generators\bin\$(Configuration)\**\Shiny.Generators.dll" Pack="true" PackagePath="build\Shiny.Generators.dll" Visible="false" />
            <!--<None Include="..\Shiny.Support.Uwp\bin\$(Configuration)\**\Shiny.Support.Uwp.*" Pack="true" PackagePath="lib\" />-->
        </ItemGroup>
    </Target>

    <Target DependsOnTargets="ResolveReferences" Name="CopyProjectReferencesToPackage">
        <ItemGroup>
            <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths->WithMetadataValue('ReferenceSourceTarget', 'ProjectReference'))"/>
        </ItemGroup>
    </Target>
</Project>
