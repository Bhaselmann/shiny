<Project Sdk="MSBuild.Sdk.Extras">

    <PropertyGroup>
        <RootNamespace>Shiny</RootNamespace>
        <Description>The Shiny Core containing all of the major functionality like caching, logging, connectivity, environment, IO, power, settings, application state monitoring, and jobs as well as many other utilities</Description>
        <TargetFrameworks>netstandard2.0;xamarin.ios10;xamarin.watchos10;xamarin.tvos10;tizen50;monoandroid10.0</TargetFrameworks>
        <TargetFrameworks Condition=" $(OS) == 'WINDOWS_NT' ">uap10.0.16299;$(TargetFrameworks)</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <None Include="readme.txt" pack="true" PackagePath="." />
        <None Include="Shiny.Core.props" pack="true" PackagePath="build/Shiny.Core.props" />
        <None Include="Shiny.Core.props" pack="true" PackagePath="buildTransitive/Shiny.Core.props" />
        <Compile Remove="**\Platforms\**\*.cs" />
        <None Include="**\Platforms\**\*.cs" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="System.Reactive" Version="4.4.1" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.7" />
        <PackageReference Include="Uno.SourceGenerationTasks" Version="2.0.13" PrivateAssets="None" />
        <ProjectReference Include="..\Shiny.Core.Abstractions\Shiny.Core.Abstractions.csproj" />
        <ProjectReference Include="..\Shiny.Generators\Shiny.Generators.csproj">
            <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
        </ProjectReference>
        <!--<PackageReference Include="System.Text.Json" Version="4.7.1" />-->
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
        <Compile Include="**\Platforms\*netstandard*\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('monoandroid10')) ">
        <Compile Include="**\Platforms\Android\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
        <PackageReference Include="Xamarin.AndroidX.Room.Common" Version="2.2.5.1" />
        <PackageReference Include="Xamarin.AndroidX.Room.Runtime" Version="2.2.5.1" />
        <PackageReference Include="Xamarin.AndroidX.Core" Version="1.2.0.1" />
        <PackageReference Include="Xamarin.AndroidX.Work.Runtime" Version="2.3.4.3" />
        <PackageReference Include="Xamarin.AndroidX.Concurrent.Futures" Version="1.0.0.1" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('tizen')) ">
        <Compile Include="**\Platforms\Tizen\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
        <ProjectReference Include="..\Shiny.Support.Uwp\Shiny.Support.Uwp.csproj" />
        <Compile Include="**\Platforms\Uwp\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin')) ">
        <Compile Include="**\Platforms\Apple\**\*.cs" />
        <Compile Include="**\Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.ios')) ">
        <Compile Include="**\Platforms\*iOS*\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.tvos')) ">
        <Compile Include="**\Platforms\*tvOS*\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.watchos')) ">
        <Compile Include="**\Platforms\*watchOS*\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.mac')) ">
        <Compile Include="**\Platforms\*macOS*\**\*.cs" />
        <Reference Include="netstandard" />
    </ItemGroup>

    <Target Name="BundleGenerators" BeforeTargets="Pack;_LoadPackInputItems">
        <ItemGroup>
            <None Include="$(SrcFolder)\Shiny.Generators\bin\$(Configuration)\**\Shiny.Generators.dll" Pack="true" PackagePath="build\Shiny.Generators.dll" Visible="false" />
            <None Include="$(SrcFolder)\Shiny.Generators\bin\$(Configuration)\**\Shiny.Generators.dll" Pack="true" PackagePath="buildTransitive\Shiny.Generators.dll" Visible="false" />
        </ItemGroup>
    </Target>

    <!--<Target Name="BuildGenerators" BeforeTargets="PrepareResources">
        <MSBuild Projects="@(ProjectReference)" Targets="Build" Properties="Configuration=$(Configuration)" />
    </Target>-->
</Project>
