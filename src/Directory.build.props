<Project>
    <PropertyGroup>
        <Authors>Allan Ritchie</Authors>
        <Owners>aritchie;shinylib</Owners>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <DisableExtraReferences>False</DisableExtraReferences>
        <NoWarn>$(NoWarn);1591;1701;1591;1702;1705;VSX1000;NU1603</NoWarn>
        <Description>Shiny</Description>
        <Product>$(AssemblyName) ($(TargetFramework))</Product>
        <ShinyVersion Condition=" '$(ShinyVersion)' == '' ">2.4.0</ShinyVersion>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://shinylib.net</PackageProjectUrl>
        <PackageVersion>$(ShinyVersion)</PackageVersion>
        <PackageIcon>icon.png</PackageIcon>
        <PackageReleaseNotes>https://shinylib.net/release-notes/</PackageReleaseNotes>
        <PackageTags>xamarin ios android ble bluetooth bluetoothle push notifications sensors geofences gps location background jobs settings speech sensors</PackageTags>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/shinyorg/shiny</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <EnableDefaultCompileItems>true</EnableDefaultCompileItems>
    </PropertyGroup>

    <PropertyGroup>
        <BuildLegacy>true</BuildLegacy>
        <BuildNet6>true</BuildNet6>
        <AndroidTargetFramework>monoandroid11.0</AndroidTargetFramework>

        <SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-ios'">14.2</SupportedOSPlatformVersion>
        <SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-maccatalyst'">14.0</SupportedOSPlatformVersion>
        <SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-android'">21.0</SupportedOSPlatformVersion>
        <!--
		<SupportedOSPlatformVersion Condition="$(TargetFramework.Contains('-windows'))">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$(TargetFramework.Contains('-windows'))">10.0.17763.0</TargetPlatformMinVersion>
		-->
    </PropertyGroup>

    <!--Shiny should not build for net6.0 directly-->
    <PropertyGroup Condition="$(TargetFramework.StartsWith('netstandard')) OR '$(TargetFramework)' == 'net6.0'">
        <IsStandardBuild>true</IsStandardBuild>
    </PropertyGroup>

    <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' AND '$(OS)' == 'WINDOWS_NT' ">
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <!--<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>-->
        <IncludeSource>True</IncludeSource>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <PublishRepositoryUrl>True</PublishRepositoryUrl>
        <EmbedUntrackedSources>True</EmbedUntrackedSources>
    </PropertyGroup>

    <PropertyGroup Condition="$(TargetFramework.Contains('android'))">
        <SupportedOSPlatformVersion>21.0</SupportedOSPlatformVersion>
        <TargetPlatformMinVersion>21.0</TargetPlatformMinVersion>
        <DefineConstants>$(DefineConstants);__ANDROID__</DefineConstants>
        <AndroidGenerateResourceDesigner>false</AndroidGenerateResourceDesigner>
        <AndroidUseIntermediateDesignerFile>false</AndroidUseIntermediateDesignerFile>
        <IsAndroidBuild>true</IsAndroidBuild>
    </PropertyGroup>

    <PropertyGroup Condition="$(TargetFramework.Contains('ios'))">
        <IsIosBuild>true</IsIosBuild>
    </PropertyGroup>

    <PropertyGroup Condition="$(TargetFramework.StartsWith('uap'))">
        <ExtrasUwpMetaPackageVersion>6.2.13</ExtrasUwpMetaPackageVersion>
        <GenerateLibraryLayout>true</GenerateLibraryLayout>
        <DisableEmbeddedXbf>false</DisableEmbeddedXbf>
        <UwpTargetFramework>uap10.0.17763</UwpTargetFramework>
        <IsWindowsBuild>true</IsWindowsBuild>
    </PropertyGroup>

    <!--
    <PropertyGroup Condition="$(TargetFramework.Contains('maccatalyst'))">
        <SupportedOSPlatformVersion>13.1</SupportedOSPlatformVersion>
        <TargetPlatformMinVersion>13.1</TargetPlatformMinVersion>
    </PropertyGroup>

    <PropertyGroup Condition="$(TargetFramework.Contains('mac'))">
        <SupportedOSPlatformVersion>10.14</SupportedOSPlatformVersion>
        <TargetPlatformMinVersion>10.14</TargetPlatformMinVersion>
        <IsMacBuild>true</IsMacBuild>
    </PropertyGroup>

    <PropertyGroup Condition="$(TargetFramework.Contains('tvos'))">
        <SupportedOSPlatformVersion>10.0</SupportedOSPlatformVersion>
        <TargetPlatformMinVersion>10.0</TargetPlatformMinVersion>
        <IsTvOsBuild>true</IsTvOsBuild>
    </PropertyGroup>
    -->
</Project>