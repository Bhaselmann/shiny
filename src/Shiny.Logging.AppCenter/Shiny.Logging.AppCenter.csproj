<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Description>Shiny AppCenter Logging for Microsoft Extensions Logging</Description>
        <TargetFrameworks>netstandard2.0;net7.0</TargetFrameworks>
        <AppCenterVersion>5.0.1</AppCenterVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="$(MicrosoftExtensionsVersion)" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="$(MicrosoftExtensionsVersion)" />
        <PackageReference Include="Microsoft.AppCenter.Crashes" Version="$(AppCenterVersion)" />
        <PackageReference Include="Microsoft.AppCenter.Analytics" Version="$(AppCenterVersion)" />
    </ItemGroup>
</Project>