<Project Sdk="MSBuild.Sdk.Extras">

    <PropertyGroup>
        <Description>Shiny Reactive BluetoothLE Plugin for client/central operations</Description>
    </PropertyGroup>

    <PropertyGroup Condition="'$(BuildLegacy)' == 'true'">
        <TargetFrameworks>netstandard2.0;xamarin.ios10;$(AndroidTargetFramework);$(TargetFrameworks)</TargetFrameworks>
        <TargetFrameworks Condition=" $(OS) == 'WINDOWS_NT' ">$(UwpTargetFramework);$(TargetFrameworks)</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition="'$(BuildNet6)' == 'true'">
        <TargetFrameworks>net6.0-ios13.6;net6.0-maccatalyst13.6;net6.0-android;$(TargetFrameworks)</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.BluetoothLE.Common\Shiny.BluetoothLE.Common.csproj" />
    </ItemGroup>
</Project>