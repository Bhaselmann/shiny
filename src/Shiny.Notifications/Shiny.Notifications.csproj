<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="Sdk.props" Sdk="MSBuild.Sdk.Extras" Version="$(MSBuildSdkExtrasVersion)" Condition="'$(UseMSBuild)' == 'true'" />

    <PropertyGroup>
        <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
        <Description>Shiny addon for all your notification needs</Description>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.Notifications.Common\Shiny.Notifications.Common.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(IsAndroidBuild)' == 'true'">
        <ProjectReference Include="..\Shiny.Locations\Shiny.Locations.csproj" />
        <PackageReference Include="Xamarin.AndroidX.AppCompat" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Platforms\WebAssembly\" />
      <None Remove="Platforms\WebAssembly\wwwroot\notifications.js" />
      <None Remove="Platforms\WebAssembly\wwwroot\" />
      <None Remove="Platforms\WebAssembly\NotificationManager.cs" />
      <None Remove="Platforms\WebAssembly\ServiceCollectionExtensions.cs" />
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Platforms\WebAssembly\" />
      <Folder Include="Platforms\WebAssembly\wwwroot\" />
    </ItemGroup>
    <ItemGroup>
      <Content Include="Platforms\WebAssembly\wwwroot\notifications.js">
        <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </Content>
    </ItemGroup>
    <ItemGroup>
      <Compile Include="Platforms\WebAssembly\NotificationManager.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true' " />
      <Compile Include="Platforms\WebAssembly\ServiceCollectionExtensions.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true' " />
    </ItemGroup>
    <Import Project="Sdk.targets" Sdk="MSBuild.Sdk.Extras" Version="$(MSBuildSdkExtrasVersion)" Condition="'$(UseMSBuild)' == 'true'" />
</Project>