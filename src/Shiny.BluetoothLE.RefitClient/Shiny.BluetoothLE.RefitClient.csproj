<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <VersionSuffix>alpha</VersionSuffix>
        <Description>Shiny BluetoothLE Refit</Description>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <None Include="readme.txt" pack="true" PackagePath="." />
        <None Update="build\**" Pack="true" PackagePath="build\%(Filename)%(Extension)" />
        <PackageReference Include="Uno.SourceGenerationTasks" Version="2.0.6" PrivateAssets="None" />
        <ProjectReference Include="..\Shiny.BluetoothLE.Abstractions\Shiny.BluetoothLE.Abstractions.csproj" />
        <ProjectReference Include="..\Shiny.BluetoothLE.RefitClient.Generator\Shiny.BluetoothLE.RefitClient.Generator.csproj">
            <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
        </ProjectReference>
    </ItemGroup>

    <Target Name="BuildGenerators"
            BeforeTargets="PrepareResources">
        <MSBuild Projects="@(ProjectReference)"
                 Targets="Build"
                 Properties="Configuration=$(Configuration)" />
    </Target>

    <Target Name="BundleGenerators"
            BeforeTargets="Pack;_LoadPackInputItems">
        <ItemGroup>
            <None Include="..\Shiny.BluetoothLE.RefitClient.Generator\bin\$(Configuration)\netstandard2.0\Shiny.BluetoothLE.RefitClient.Generator.dll" 
                  Pack="true" 
                  PackagePath="build\Shiny.BluetoothLE.RefitClient.Generator.dll" 
                  Visible="false" />
        </ItemGroup>
    </Target>

</Project>
