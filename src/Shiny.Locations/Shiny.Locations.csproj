<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="Sdk.props" Sdk="MSBuild.Sdk.Extras" Version="3.0.44" Condition="'$(CompileClassic)' == 'true'" />

    <PropertyGroup>
        <TargetFrameworks>net6.0;net6.0-ios;net6.0-maccatalyst;net6.0-android</TargetFrameworks>
        <TargetFrameworks Condition="'$(CompileClassic)' == 'true'">$(TargetFrameworks);netstandard2.1;xamarin.ios10;$(ClassicAndroidTargetFramework)</TargetFrameworks>
        <Description>Shiny Locations - bringing geofencing and GPS to a background service near you!</Description>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(IsIosBuild)' == 'true'">
        <ProjectReference Include="..\Shiny.Locations.Common\Shiny.Locations.Common.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(IsAndroidBuild)' == 'true'">
        <ProjectReference Include="..\Shiny.Locations.Common\Shiny.Locations.Common.csproj" />
        <PackageReference Include="Xamarin.GooglePlayServices.Location" />
    </ItemGroup>

    <Import Project="Sdk.targets" Sdk="MSBuild.Sdk.Extras" Version="3.0.44" Condition="'$(CompileClassic)' == 'true'" />
</Project>
