<Project Sdk="MSBuild.Sdk.Extras">

    <PropertyGroup>
        <Description>Shiny Beacons - for those Shiny BLE things you see everywhere</Description>
    </PropertyGroup>

    <PropertyGroup Condition="'$(BuildLegacy)' == 'true'">
        <TargetFrameworks>$(TargetFrameworks);netstandard2.0;xamarin.ios10;$(AndroidTargetFramework);</TargetFrameworks>
        <TargetFrameworks Condition=" $(OS) == 'WINDOWS_NT' ">$(UwpTargetFramework);$(TargetFrameworks)</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition="'$(BuildNet6)' == 'true'">
        <TargetFrameworks>$(TargetFrameworks);net6.0-ios13.6;net6.0-maccatalyst13.6;net6.0-android30</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.Locations.Common\Shiny.Locations.Common.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(IsAndroidBuild)' == 'true' OR '$(IsWindowsBuild)' == 'true'">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <ProjectReference Include="..\Shiny.BluetoothLE\Shiny.BluetoothLE.csproj" />
    </ItemGroup>
</Project>
