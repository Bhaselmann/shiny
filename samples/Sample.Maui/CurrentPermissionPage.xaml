<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sample="clr-namespace:Sample"
             x:DataType="sample:CurrentPermissionViewModel"
             x:Class="Sample.CurrentPermissionPage"
             Title="Current Permissions">

    <RefreshView Command="{Binding Refresh}">
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection>
                    <TextCell Text="BLE" Detail="{Binding BleClient}" />
                    <TextCell Text="BLE Advertising" Detail="{Binding BleHostAdvertised}" />
                    <TextCell Text="BLE Host GATT" Detail="{Binding BleHostGatt}" />
                    <TextCell Text="GPS Foreground" Detail="{Binding GpsInApp}" />
                    <TextCell Text="GPS Background" Detail="{Binding GpsBackground}" />
                    <TextCell Text="Geofencing" Detail="{Binding Geofencing}" />
                </TableSection>
            </TableRoot>
        </TableView>
    </RefreshView>
</ContentPage>
