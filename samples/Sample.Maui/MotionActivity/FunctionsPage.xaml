<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sample="clr-namespace:Sample.MotionActivity"
             x:DataType="sample:FunctionsViewModel"
             x:Class="Sample.MotionActivity.FunctionsPage"
             Title="Motion Activity (Functions)">

    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection>
                    <TextCell Text="Current Activity" Detail="{Binding CurrentText}" />
                    <SwitchCell Text="Auto" On="{Binding IsCurrentAuto}" />
                    <SwitchCell Text="Stationary" On="{Binding IsCurrentStationary}" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>